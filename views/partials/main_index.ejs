<main class="text-gray-600 min-w-[320px]">
  <!-- Main container for the form -->
  <div class="container px-5 py-24 mx-auto h-[60vh] min-h-fit">
    <!-- Search form -->

    <form
      action="/city"
      method="get"
      autocomplete="off"
      class="p-8 md:w-3/4 lg:w-3/6 mx-auto mt-10"
    >
      <!-- Form title -->
      <h2 class="text-gray-900 text-lg font-medium title-font mb-2">
        Search for Your City
      </h2>

      <!-- Search input label -->
      <label for="search" class="text-sm font-medium text-gray-900 sr-only">
        Search
      </label>

      <!-- Search input container -->
      <div class="relative">
        <!-- Search icon for medium and large devices-->
        <div
          class="absolute top-[20px] left-0 flex items-center pl-3 pointer-events-none"
        >
          <svg
            class="w-4 h-4 text-gray-500"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 20 20"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
            />
          </svg>
        </div>

        <!-- Search input field -->
        <input
          type="search"
          id="search"
          name="cityname"
          class="w-full p-4 pl-10 text-sm border rounded-lg bg-gray-50 focus:ring focus:border-indigo-500"
          placeholder="Toronto, CA"
          required
        />
      </div>
    </form>
  </div>
</main>
